# ================================
# CRIMINAL BLUFF - ПЕРЕМЕННЫЕ ОКРУЖЕНИЯ
# ================================

# Базовые настройки приложения
NODE_ENV=development
PORT=3000

# ================================
# БАЗА ДАННЫХ MONGODB
# ================================
# URL для подключения к MongoDB
# Формат: mongodb://username:password@host:port/database
# Для локальной разработки: mongodb://localhost:27017/criminal-bluff
MONGO_URL=mongodb://localhost:27017/criminal-bluff

# ================================
# JWT АУТЕНТИФИКАЦИЯ
# ================================
# Секретный ключ для подписи JWT токенов
# ОБЯЗАТЕЛЬНО: Сгенерируйте новый ключ для продакшена!
# Команда: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here

# ================================
# TELEGRAM BOT API
# ================================
# Токен бота от @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Имя пользователя бота (без @)
TELEGRAM_BOT_USERNAME=your_bot_username

# ================================
# ДОМЕН И CORS
# ================================
# URL вашего приложения для Railway/Heroku
# Для локальной разработки: http://localhost:3000
APP_URL=your_app_url_here

# CORS источники (разделенные запятыми или * для всех)
# Для продакшена укажите конкретные домены
CORS_ORIGIN=*

# ================================
# БЕЗОПАСНОСТЬ
# ================================
# Rate limiting настройки (запросов в минуту)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Максимальный размер JSON payload (в байтах)
MAX_JSON_SIZE=1mb

# ================================
# ЛОГИРОВАНИЕ
# ================================
# Уровень логирования: error, warn, info, debug
LOG_LEVEL=info

# ================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ================================
# Таймаут соединения с БД (мс)
DB_TIMEOUT=30000

# Включить/отключить кеширование
ENABLE_CACHE=true

# ================================
# ИНСТРУКЦИИ ПО БЕЗОПАСНОСТИ
# ================================
# 1. НЕ КОММИТИТЕ этот файл с реальными данными
# 2. Скопируйте в .env и заполните реальные значения
# 3. Добавьте .env в .gitignore
# 4. Используйте надежные пароли и ключи
# 5. Для продакшена используйте переменные окружения хостинга
# ================================ 